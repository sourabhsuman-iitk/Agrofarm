<%- include('../partials/header'); -%>


    <div id="crop-container" class="container " >

        
        <div class="masonry row" style="position: relative;">

            <div class="col s12 m10 l10 " style="position: absolute; left: 0; top: 10px; margin-bottom: 200px;">
                <div class="row">
                    <div class="col s12 m10 offset-m2 l10 offset-l4">
                      <div class="card">
                        <div class="card-image">
                          <img src="<%= crop.data().image %>">
                          <span class="card-title card-title-change"><%= crop.data().brandname %></span>
                        </div>
                        <div class="card-content">
                            <p><strong> Company Name</strong></p>  
                            <p><%- crop.data().compname %></p>
                            <p><strong> Description and mode of action</strong></p> 
                          <p><%- crop.data().description %></p>
                         
                            <p><strong> Application and dosage</strong></p> 
                          <p><%- crop.data().application %></p>
                          <br>
                        <p><strong>Chemical Products linked</strong></p>
                        <p>
                          <ol>
                          <% chemp.docs.forEach(doc =>{ %>
                            <% let l = crop.data().linkedChemicalProdId.length %>
                            <% if (typeof(crop.data().linkedChemicalProdId) === 'string'){ l = 1 }%>
                            <% for( let i = 0; i < l ; i++) { %>
                              <% if(l === 1){  %> 
                                <%  if(crop.data().linkedChemicalProdId === doc.id){  %>
                                  <li><%= doc.data().name %></li>
                               <% }} else if(crop.data().linkedChemicalProdId[i] === doc.id){ %>
                               <li> <%= doc.data().name %></li>
                               <% }}}) %>
                          </ol>   
                        </p>
                        </div>
                        
                        
                      </div>
                    </div>
                  </div>
            </div>
    
        </div>
      
    </div>
    
    <div class="fixed-action-btn">
        <a href="/productbrand/<%= crop.data().language %>" class="btn-floating btn-small red">
          <i class="small material-icons">arrow_back</i>
        </a>
    </div>
   


    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="logout.js"></script>
    <script src="fireBase.js"></script>
    <script>
        $(document).ready(function(){
        $('.sidenav').sidenav();
        });
    </script>
</body>
</html>